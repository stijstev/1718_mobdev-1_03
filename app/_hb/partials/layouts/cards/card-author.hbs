{{#> layouts/cards/card cardtype="card-project" classes=classes width=width pathToRoot="./" }}
  {{#*inline "card-structure"}}
  <div class="fb-grid__row">
    <div class="fb-grid__col-6">
      <img src="assets/images/placeholder.png" alt="">
    </div>
    <div class="fb-grid__col-6">
      <div class="fb-grid__row">
        <h1>Stijn Stevens</h1>
      </div>
      <div class="fb-grid__row">
        <p>Designer and developer</p>
      </div>
      <!-- Card controls -->
      <div class="fb-grid__row">
        <img class="fb-grid__col-3 card-project__icon" src="assets/images/symbols/facebook.svg" alt="Like">
        <img class="fb-grid__col-3 card-project__icon" src="assets/images/symbols/instagram.svg" alt="comment">
        <img class="fb-grid__col-3 card-project__icon" src="assets/images/symbols/twitter.svg" alt="comment">
        <img class="fb-grid__col-3 card-project__icon" src="assets/images/symbols/view.svg" alt="comment">
      </div>
    </div>
  </div>

  {{/inline}}
