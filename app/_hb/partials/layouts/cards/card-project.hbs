{{#> layouts/cards/card cardtype="card-project" classes=classes width=width pathToRoot="./" }}
  {{#*inline "card-structure"}}

  <div class="card-project__image-container">
    <img class="card-project__image" src="{{#if image}}{{image}}{{else}}#{{/if}}" alt="{{#if alt}}{{alt}}{{else}}Image{{/if}}">
  </div>
  <!-- Card controls -->
  <div class="fb-grid__row">
    <div class="fb-grid__col-6">
      <div class="fb-grid__row">
        <img class="fb-grid__col-6 card-icon" src="assets/images/symbols/heart.svg" alt="Like">
        <p class="fb-grid__col-6 card-project__likes">0</p>
      </div>
    </div>
    <div class="fb-grid__col-6">
      <div class="fb-grid__row">
        <img class="fb-grid__col-6 card-icon" src="assets/images/symbols/comment.svg" alt="comment">
        <p class="fb-grid__col-6 card-project__comment">0</p>
      </div>
    </div>
  </div>

  {{/inline}}
{{/layouts/cards/card}}