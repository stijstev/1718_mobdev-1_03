  {{#*inline "card-structure"}}
      <div class="fb-grid__row">
		<div class="fb-grid__col-12">
			<form class="register-form" action="post">
				<h1>E-Mail</h1>
				<input type="text" name="email" id="Email-2">

				<h1>Wachtwoord</h1>
				<input type="password" name="password" id="Password-2">

				<div class="repeat-password-container">
					<h1>Herhaal Wachtwoord</h1>
					<input type="password" name="repeat-password" id="Repeat-password-1">
				</div>

				<div class="name-container">
					<h1>Naam</h1>
					<input type="text" name="name" id="Name">
				</div>
				
				<h1>Gebruikersnaam</h1>
				<input type="text" name="username" id="Username">

				<div class="repeat-password-container">
					<h1>Herhaal Wachtwoord</h1>
					<input type="password" name="repeat-password" id="Repeat-password-2">
				</div>
			</form>
		</div> 
      </div>
			<div class="fb-grid__row">
				<div class="fb-grid__col-12 radio-col">
					<div class="radio">
						<input type="checkbox" name="gender" value="male">
						<label for="f-option" class="radio-label">Ik ben een GDM student</label>
					</div> 
					<div class="radio">
						<input type="radio" name="gender" value="female">
						<label for="f-option" class="radio-label">Crossmedia</label> 
					</div>
					<div class="radio">
						<input type="radio" name="gender" value="other">
						<label for="f-option" class="radio-label">Multimedia</label> 
					</div>
					<div class="radio">
						<input type="radio" name="gender" value="other">
						<label for="f-option" class="radio-label">Multimedia</label> 
					</div> 
				</div>
			</div>
      <div class="fb-grid__row">
				<div class="fb-grid__col-12 button-col">
					<button type="submit" class="login-button"><h1>Register</h1></button>
				</div>
      </div>
			

  {{/inline}}
